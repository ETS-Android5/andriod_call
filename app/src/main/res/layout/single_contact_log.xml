<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:orientation="horizontal"
    android:background="@color/white"
    android:padding="10dp"
    android:layout_height="wrap_content"
    android:id="@+id/single_contact">


    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:gravity="center"
        android:background="@drawable/circle_outline_log"

        >


        <ImageView
            android:id="@+id/img_type"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_status_complete_incoming1"

            />

    </LinearLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_weight="1"
        android:layout_marginLeft="15dp">


        <TextView
            android:id="@+id/caller_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="David"
            android:textSize="16sp"
            android:fontFamily="@font/proximanovasoft_medium"
            android:textColor="@color/font_calllog"
            />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/depart_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Via Tech department"
                android:textSize="12sp"
                android:maxLength="15"
                android:fontFamily="@font/proximanovasoft_regular"
                android:textColor="@color/font_calllog"
                />


            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="2dp"
                android:layout_marginRight="2dp"
                android:text="|"
                android:textSize="12sp"
                android:fontFamily="@font/proximanovasoft_regular"
                android:textColor="@color/font_calllog"
                />

            <TextView
                android:id="@+id/status"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Missed"
                android:textSize="12sp"
                android:fontFamily="@font/proximanovasoft_regular"
                android:textColor="@color/font_calllog"
                />



        </LinearLayout>



    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:orientation="vertical">

        <TextView
            android:id="@+id/duration"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="01:00"
            android:layout_gravity="end"
            android:textSize="12sp"
            android:fontFamily="@font/proximanovasoft_regular"
            android:textColor="@color/font_calllog"
            />

        <TextView
            android:id="@+id/time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Nov 7, 2019 12:12 PM"
            android:textSize="12sp"
            android:fontFamily="@font/proximanovasoft_regular"
            android:textColor="@color/font_calllog"
            />





    </LinearLayout>

</LinearLayout>