    <!--&gt;-->

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/border_elevation_bg"
        android:padding="14dp"
        android:layout_marginEnd="16dp"
        android:layout_marginStart="16dp"
        android:layout_marginBottom="5dp"
        android:layout_marginTop="5dp"
        android:orientation="horizontal">



        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="5dp"
            android:layout_marginLeft="8dp"
            android:layout_weight="1"
            >


            <TextView
                android:id="@+id/tx_remin_name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="David Warner"
                android:textSize="18sp"
                android:fontFamily="@font/proximanovasofts_semibold"
                />

            <TextView
                android:id="@+id/tx_remin_number"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:text="+17656124568"
                android:textSize="12sp"
                android:textColor="#b3bbbb"
                android:fontFamily="@font/proximanovasoft_medium"
                />


            <TextView
                android:id="@+id/tx_remin_time"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:text="May 11 , 2018 - 10:00 AM"
                android:textSize="14sp"
                android:textStyle="bold"
                android:fontFamily="@font/proximanovasoft_regular"
                />




        </LinearLayout>


        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginEnd="20dp">


            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/icon_call_reminder_complete"/>


        </LinearLayout>





    </LinearLayout>
    <!--</android.support.v7.widget.CardView>-->

</LinearLayout>