<?xml version="1.0" encoding="utf-8"?>
<androidx.core.widget.NestedScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    app:layout_behavior="@string/appbar_scrolling_view_behavior">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:background="@color/white"
            android:gravity="center_horizontal"
            android:orientation="vertical"
            android:padding="20dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="1.0"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/toolbareditcontact"
            app:layout_constraintVertical_bias="0.0">

            <ImageView
                android:id="@+id/imageView2"
                android:layout_width="111dp"
                android:layout_height="111dp"
                android:background="@drawable/bg_circle_v3"
                android:padding="5dp"
                app:srcCompat="@drawable/ic_person" />

            <TextView
                android:id="@+id/profileUsername"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="10dp"
                android:layout_marginTop="10dp"
                android:layout_marginEnd="10dp"
                android:drawablePadding="20dp"
                android:ems="10"
                android:gravity="center"
                android:fontFamily="@font/proximanovasoft_bold"
                android:textSize="18sp"
                android:textColor="@color/black"
                android:text="Vivek tw " />
            <TextView
                android:id="@+id/profileEmail"
                android:layout_gravity="center"
                android:gravity="center"
                android:maxLines="1"
                android:layout_marginTop="10dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="vivek@callhippo.com"
                android:fontFamily="@font/proximanovasoft_medium"
                android:textSize="16sp"
                android:textColor="#b6b6b6"/>

            <TextView
                android:id="@+id/profileChangepass"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="10dp"
                android:layout_marginTop="10dp"
                android:layout_marginEnd="10dp"
                android:drawablePadding="20dp"
                android:ems="10"
                android:gravity="center"
                android:fontFamily="@font/proximanovasoft_bold"
                android:textSize="16sp"
                android:textColor="@color/black"
                android:text="@string/change_pass"
                />

                   </LinearLayout>
    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.core.widget.NestedScrollView>