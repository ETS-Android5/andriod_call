<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"

        android:weightSum="10">







        <LinearLayout
            android:id="@+id/l_dialpad_top"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_marginTop="50dp"
            android:layout_weight="3"
            android:orientation="vertical"
            android:visibility="gone">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center_horizontal"
                android:orientation="horizontal">

                <EditText
                    android:id="@+id/phoneNumberbm"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginStart="60dp"
                    android:layout_marginEnd="15dp"
                    android:background="@null"
                    android:ems="10"
                    android:layout_weight="1"
                    android:focusableInTouchMode="false"
                    android:fontFamily="@font/proximanovasoft_regular"
                    android:inputType="phone"
                    android:textColor="@color/black"
                    android:textSize="16sp" />


                <ImageView
                    android:id="@+id/img_back_dialpad"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="10dp"
                    android:src="@drawable/ic_delete_text_v2"/>


            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_horizontal"
                android:orientation="horizontal">

                <LinearLayout
                    android:id="@+id/btnOnem"
                    android:layout_width="75dp"
                    android:layout_height="65dp"
                    android:layout_marginRight="25dp"
                    android:gravity="center"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/proximanovasoft_medium"
                        android:text="1"
                        android:textColor="@color/colorblack"
                        android:textSize="25sp" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text=""
                        android:textColor="@color/colorsilver"
                        android:textSize="12sp" />
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/btntwom"
                    android:layout_width="75dp"
                    android:layout_height="65dp"
                    android:gravity="center"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/proximanovasoft_medium"
                        android:text="2"
                        android:textColor="@color/colorblack"
                        android:textSize="25sp" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/proximanovasoft_medium"
                        android:text="ABC"
                        android:textColor="@color/colorsilver"
                        android:textSize="12sp" />
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/btnthreem"
                    android:layout_width="75dp"
                    android:layout_height="65dp"
                    android:layout_marginLeft="25dp"
                    android:gravity="center"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/proximanovasoft_medium"
                        android:text="3"
                        android:textColor="@color/colorblack"
                        android:textSize="25sp" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/proximanovasoft_medium"
                        android:text="DEF"
                        android:textColor="@color/colorsilver"
                        android:textSize="12sp" />
                </LinearLayout>


            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:gravity="center_horizontal"
                android:orientation="horizontal">

                <LinearLayout
                    android:id="@+id/btnfourm"
                    android:layout_width="75dp"
                    android:layout_height="65dp"
                    android:layout_marginRight="25dp"
                    android:gravity="center"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/proximanovasoft_medium"
                        android:text="4"
                        android:textColor="@color/colorblack"
                        android:textSize="25sp" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="GHI"
                        android:textColor="@color/colorsilver"
                        android:textSize="12sp" />
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/btnfivem"
                    android:layout_width="75dp"
                    android:layout_height="65dp"
                    android:gravity="center"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/proximanovasoft_medium"
                        android:text="5"
                        android:textColor="@color/colorblack"
                        android:textSize="25sp" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/proximanovasoft_medium"
                        android:text="JKL"
                        android:textColor="@color/colorsilver"
                        android:textSize="12sp" />
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/btnsixm"
                    android:layout_width="75dp"
                    android:layout_height="65dp"
                    android:layout_marginLeft="25dp"
                    android:gravity="center"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/proximanovasoft_medium"
                        android:text="6"
                        android:textColor="@color/colorblack"
                        android:textSize="25sp" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/proximanovasoft_medium"
                        android:text="MNO"
                        android:textColor="@color/colorsilver"
                        android:textSize="12sp" />
                </LinearLayout>


            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:gravity="center_horizontal"
                android:orientation="horizontal">

                <LinearLayout
                    android:id="@+id/btnsevenm"
                    android:layout_width="75dp"
                    android:layout_height="65dp"
                    android:layout_marginRight="25dp"
                    android:gravity="center"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/proximanovasoft_medium"
                        android:text="7"
                        android:textColor="@color/colorblack"
                        android:textSize="25sp" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="PQRS"
                        android:textColor="@color/colorsilver"
                        android:textSize="12sp" />
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/btneightm"
                    android:layout_width="75dp"
                    android:layout_height="65dp"
                    android:gravity="center"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/proximanovasoft_medium"
                        android:text="8"
                        android:textColor="@color/colorblack"
                        android:textSize="25sp" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/proximanovasoft_medium"
                        android:text="TUV"
                        android:textColor="@color/colorsilver"
                        android:textSize="12sp" />
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/btnninem"
                    android:layout_width="75dp"
                    android:layout_height="65dp"
                    android:layout_marginLeft="25dp"
                    android:gravity="center"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/proximanovasoft_medium"
                        android:text="9"
                        android:textColor="@color/colorblack"
                        android:textSize="25sp" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/proximanovasoft_medium"
                        android:text="WXYZ"
                        android:textColor="@color/colorsilver"
                        android:textSize="12sp" />
                </LinearLayout>


            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:gravity="center_horizontal"
                android:orientation="horizontal">

                <LinearLayout
                    android:id="@+id/btnstarm"
                    android:layout_width="75dp"
                    android:layout_height="65dp"
                    android:layout_marginRight="25dp"
                    android:gravity="center"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/proximanovasoft_medium"
                        android:text="*"
                        android:textColor="@color/colorblack"
                        android:textSize="25sp" />


                </LinearLayout>

                <LinearLayout
                    android:id="@+id/btnzerom"
                    android:layout_width="75dp"
                    android:layout_height="65dp"
                    android:gravity="center"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/proximanovasoft_medium"
                        android:text="0"
                        android:textColor="@color/colorblack"
                        android:textSize="25sp" />


                </LinearLayout>

                <LinearLayout
                    android:id="@+id/btnhasm"
                    android:layout_width="75dp"
                    android:layout_height="65dp"
                    android:layout_marginLeft="25dp"
                    android:gravity="center"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/proximanovasoft_medium"
                        android:text="#"
                        android:textColor="@color/colorblack"
                        android:textSize="25sp" />
                </LinearLayout>


            </LinearLayout>
        </LinearLayout>

        <LinearLayout
            android:id="@+id/top_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="3"
            android:gravity="center"
            android:orientation="vertical"
            android:visibility="visible">

            <ImageView
                android:id="@+id/imageView61"
                android:layout_width="match_parent"
                android:layout_height="125dp"
                android:visibility="gone"
                android:layout_alignStart="@+id/l_dialpad_top"
                android:layout_marginTop="10dp"
                app:srcCompat="@drawable/icon_user" />

            <pl.droidsonroids.gif.GifImageView
                android:id="@+id/imageView6"
                android:layout_width="match_parent"
                android:layout_marginTop="15dp"
                android:layout_height="150dp"
                android:layout_gravity="center"
                android:layout_alignStart="@+id/l_dialpad_top"
                android:src="@drawable/ig_call"
                />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/textView11"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="3"
                    android:fontFamily="@font/proximanovasofts_semibold"
                    android:text="Outgoing Call"
                    android:textAlignment="center"
                    android:textColor="@color/call_type"
                    android:textSize="18sp" />

                <TextView
                    android:id="@+id/textviewoutgoingfromNumber"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="5dp"
                    android:fontFamily="@font/proximanovasoft_medium"
                    android:text=""
                    android:visibility="visible"
                    android:maxLines="1"
                    android:textAlignment="center"
                    android:textColor="@color/call_type"
                    android:textSize="14sp" />

                <TextView
                    android:id="@+id/txt_toname"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="5dp"
                    android:layout_weight="3"
                    android:fontFamily="@font/proximanovasoft_bold"
                    android:text="David Warner"
                    android:textAlignment="center"
                    android:textColor="@color/call_name"
                    android:textSize="18sp" />



                <TextView
                    android:id="@+id/txt_tonumber"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:layout_weight="3"
                    android:fontFamily="@font/proximanovasoft_medium"
                    android:text="+919950008182"
                    android:textAlignment="center"
                    android:textColor="@color/call_type"
                    android:textSize="16sp" />


                <TextView
                    android:id="@+id/textViewOutgoingtime"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_margin="15dp"
                    android:layout_weight="3"
                    android:background="@drawable/callingtime_shadow"
                    android:fontFamily="@font/proximanovasoft_medium"
                    android:paddingLeft="10dp"
                    android:paddingRight="10dp"
                    android:text="00:00"
                    android:textColor="@color/call_name"
                    android:textAlignment="center"
                    android:textSize="16sp" />
            </LinearLayout>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_alignParentEnd="true"
            android:layout_alignParentBottom="true"
            android:layout_marginStart="0dp"
            android:layout_marginEnd="0dp"
            android:layout_marginBottom="20dp"
            android:layout_weight="7"
            android:orientation="vertical"
            android:paddingTop="20dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="62dp"
                android:layout_marginStart="20dp"
                android:layout_marginEnd="20dp"
                android:orientation="horizontal">

                <LinearLayout
                    android:id="@+id/l_mute"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:orientation="vertical">

                    <ImageView
                        android:id="@+id/ic_mute"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:layout_gravity="center"
                        android:src="@drawable/ic_mute_v2" />

                    <TextView
                        android:id="@+id/tx_mute"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="5dp"
                        android:layout_weight="1"
                        android:fontFamily="@font/proximanovasoft_regular"
                        android:text="MUTE"
                        android:textColor="@color/call_mute"
                        android:textAlignment="center"
                        />
                </LinearLayout>



                <LinearLayout
                    android:id="@+id/l_forward"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:visibility="invisible"
                    android:orientation="vertical">

                    <ImageView
                        android:id="@+id/ic_forward"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_weight="1"
                        app:srcCompat="@drawable/ic_forward_v2" />

                    <TextView
                        android:id="@+id/tx_forward"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="5dp"
                        android:layout_weight="1"
                        android:fontFamily="@font/proximanovasoft_regular"
                        android:text="FORWARD"
                        android:textAlignment="center"
                        android:textColor="@color/call_mute"/>
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/l_hold"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:orientation="vertical">

                    <ImageView
                        android:id="@+id/ic_hold"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_weight="1"
                        android:src="@drawable/ic_hold_v2" />

                    <TextView
                        android:id="@+id/tx_hold"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="5dp"
                        android:layout_weight="1"
                        android:fontFamily="@font/proximanovasoft_regular"
                        android:text="HOLD"
                        android:textAlignment="center"
                        android:textColor="@color/call_mute"/>
                </LinearLayout>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="89dp"
                android:layout_marginStart="20dp"
                android:layout_marginTop="30dp"
                android:layout_marginEnd="20dp"
                android:orientation="horizontal">

                <LinearLayout
                    android:id="@+id/l_loud"
                    android:layout_width="match_parent"
                    android:layout_height="62dp"
                    android:layout_weight="1"
                    android:orientation="vertical">

                    <ImageView
                        android:id="@+id/ic_loud"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:layout_gravity="center"
                        app:srcCompat="@drawable/ic_loud_v2" />

                    <TextView
                        android:id="@+id/tx_loud"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="5dp"
                        android:layout_weight="1"
                        android:fontFamily="@font/proximanovasoft_regular"
                        android:text="LOUD"
                        android:textAlignment="center"
                        android:textColor="@color/call_mute"/>
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/l_hangup"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:orientation="vertical">

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="10dp"
                        android:layout_gravity="center"
                        android:layout_marginRight="10dp"
                        android:padding="20dp"
                        android:layout_marginBottom="10dp"
                        android:background="@drawable/circle_outline_hangup_new"
                        android:src="@drawable/ic_hangup_v2" />

                </LinearLayout>

                <LinearLayout
                    android:id="@+id/l_dialpad"
                    android:layout_width="match_parent"
                    android:layout_height="62dp"
                    android:layout_weight="1"
                    android:orientation="vertical">

                    <ImageView
                        android:id="@+id/ic_dialer"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:layout_gravity="center"
                        app:srcCompat="@drawable/ic_dialpad_v2" />

                    <TextView
                        android:id="@+id/tx_dialer"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="5dp"
                        android:layout_weight="1"
                        android:fontFamily="@font/proximanovasoft_regular"
                        android:text="DIALER"
                        android:textColor="@color/call_mute"
                        android:textAlignment="center" />
                </LinearLayout>
            </LinearLayout>
        </LinearLayout>
    </RelativeLayout>
</androidx.constraintlayout.widget.ConstraintLayout>