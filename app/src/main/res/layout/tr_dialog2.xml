<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:background="@drawable/rounded_corner"
    android:padding="18dp"
    android:orientation="vertical"
    android:layout_height="wrap_content">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:visibility="gone"
        android:gravity="end">


        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/icon_cross"
            />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:layout_marginTop="5dp"
        android:background="@drawable/rounded_corner"
        android:orientation="horizontal">



        <ImageView
            android:id="@+id/icon_back"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/icon_bck"
            android:layout_marginLeft="2dp"
            android:padding="5dp"
            />
        <TextView
            android:id="@+id/txt_tr_sub_username"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text=""
            android:textStyle="bold"
            android:layout_marginLeft="10dp"
            android:textSize="18sp"
            />


    </LinearLayout>


    <LinearLayout
        android:id="@+id/l_blindTransfer"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="30dp"
        android:orientation="horizontal"
        android:background="@drawable/rounded_corner"
        >



        <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/icon_tr_now_n"
                android:layout_marginLeft="10dp"
                android:layout_gravity="center"
            />


        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Transfer Now"
            android:padding="12dp"
            android:textSize="16sp"/>



    </LinearLayout>


    <LinearLayout
        android:id="@+id/l_talktouser"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:orientation="horizontal"
        android:background="@drawable/rounded_corner"
        >



        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/icon_tr_user"
            android:layout_marginLeft="10dp"
            android:layout_gravity="center"
            />


        <TextView
            android:id="@+id/txt_talkto"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Talk to first"
            android:padding="12dp"
            android:textSize="16sp"/>



    </LinearLayout>

</LinearLayout>