                        android:layout_width="30dp"
                        android:layout_height="30dp"
                        android:src="@drawable/ic_del_b"
                        android:layout_marginTop="5dp"
                        android:background="@color/transparent"/>

                </LinearLayout>
            </RelativeLayout>


