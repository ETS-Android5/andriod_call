<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:gravity="center"
    android:background="@color/white">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="8dp">

        <RelativeLayout
            android:id="@+id/contactUser"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="?android:attr/selectableItemBackground"
            >

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="5dp"
                android:gravity="center">

                <ImageView
                    android:id="@+id/phone_image"
                    android:layout_width="43dp"
                    android:layout_height="43dp"
                    android:layout_gravity="center_horizontal|center_vertical"
                    android:src="@drawable/icon_user_msg_n" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentTop="true"
                android:layout_marginLeft="50dp"
                android:orientation="horizontal">

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="5dp"
                    android:layout_weight="3"
                    android:orientation="vertical">



                    <TextView
                        android:id="@+id/textviewNumber"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:ellipsize="end"
                        android:fontFamily="@font/proximanovasofts_semibold"
                        android:maxLines="1"
                        android:text="+12185061020"
                        android:textColor="@color/font_contact_number"
                        android:textSize="16sp"
                        android:layout_marginTop="7dp"/>
                </LinearLayout>
            </LinearLayout>

            <LinearLayout
                android:id="@+id/l_call_v1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:orientation="horizontal"
                android:layout_marginRight="120dp"
                android:clickable="true">

                <ImageView
                    android:layout_width="35dp"
                    android:layout_height="35dp"
                    android:background="@drawable/bg_circle_primarycolor"
                    android:padding="10dp"
                    android:src="@drawable/ic_call_white_24dp" />

            </LinearLayout>

            <LinearLayout
                android:id="@+id/l_sms"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:clickable="true"
                android:orientation="horizontal"
                android:layout_marginRight="80dp"
                >

                <ImageView
                    android:layout_width="35dp"
                    android:layout_height="35dp"
                    android:background="@drawable/bg_circle_primarycolor"
                    android:padding="10dp"
                    android:src="@drawable/ic_sms_white_v2" />

            </LinearLayout>


            <LinearLayout
                android:id="@+id/l_reminder"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:clickable="true"
                android:orientation="horizontal"
                android:layout_marginRight="40dp"
                >

                <ImageView
                    android:id="@+id/img_reminder"
                    android:layout_width="35dp"
                    android:layout_height="35dp"
                    android:background="@drawable/bg_circle_primarycolor"
                    android:padding="10dp"
                    android:src="@drawable/ic_reminder_vc" />

            </LinearLayout>

            <LinearLayout
                android:id="@+id/l_blocklist"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:clickable="true"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/img_blacklist"
                    android:layout_width="35dp"
                    android:layout_height="35dp"
                    android:background="@drawable/bg_circle_primarycolor"
                    android:padding="10dp"
                    android:src="@drawable/ic_blacklist_vc"
                    android:tag="block"/>

            </LinearLayout>

        </RelativeLayout>

    </RelativeLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentBottom="true"
        android:background="@color/separator_line" />

    <com.hbb20.CountryCodePicker
        android:id="@+id/ccp_single_contact_num_v1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:visibility="gone"
        />

</LinearLayout>