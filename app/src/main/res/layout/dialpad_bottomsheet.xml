<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:ignore="HardcodedText"
   android:background="@color/white"
    >

    <RelativeLayout
        android:id="@+id/phonedialScreen"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:background="@drawable/shadow_fivetwo">
        <EditText
            android:id="@+id/phoneNumberbm"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_marginRight="60dp"
            android:background="@android:color/transparent"
            android:focusableInTouchMode="false"
            android:freezesText="true"
            android:maxLines="1"
            android:textSize="32sp"
            android:paddingTop="4dp"
            android:layout_marginBottom="10dp"
            android:layout_marginLeft="20dp"
            android:inputType="number"
            android:textColor="@color/colorblack"
            />
        <Button
            android:id="@+id/btnDeletebm"
            android:layout_width="52dp"
            android:layout_height="40dp"
            android:background="@drawable/ic_delete_text"
            android:gravity="center_vertical|center_horizontal"
            android:layout_alignParentTop="true"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true"
            android:layout_marginRight="10dp"
            android:layout_marginTop="4dp"
            />
        </RelativeLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="8dp"
        android:layout_below="@id/phonedialScreen">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_horizontal"
            android:layout_marginTop="5dp"
            android:layout_weight="3">
            <LinearLayout
                android:id="@+id/btnOnem"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:orientation="vertical"
                android:layout_marginRight="25dp">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="1"
                    android:textSize="25sp"
                    android:textColor="@color/colorPrimary"
                    android:shadowColor="@color/colorsilver"
                    />
            </LinearLayout>
            <LinearLayout
                android:id="@+id/btntwom"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:orientation="vertical"
                >
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="2"
                    android:textSize="25sp"
                    android:textColor="@color/colorPrimary"
                    android:shadowColor="@color/colorsilver"
                    />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="ABC"
                    android:textSize="14sp"
                    android:textColor="@color/colorsilver"
                    android:shadowColor="@color/colorsilver"/>
            </LinearLayout>
            <LinearLayout
                android:id="@+id/btnthreem"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:orientation="vertical"
                android:layout_marginLeft="25dp">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="3"
                    android:textSize="25sp"
                    android:textColor="@color/colorPrimary"
                    android:shadowColor="@color/colorsilver"
                    />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="DEF"
                    android:textSize="14sp"
                    android:textColor="@color/colorsilver"
                    android:shadowColor="@color/colorsilver"/>
            </LinearLayout>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_horizontal"
            android:layout_marginTop="20dp"
            android:layout_weight="3">
            <LinearLayout
                android:id="@+id/btnfourm"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:orientation="vertical"
                android:layout_marginRight="25dp">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="4"
                    android:textSize="25sp"
                    android:textColor="@color/colorPrimary"
                    android:shadowColor="@color/colorsilver"
                    />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="GHI"
                    android:textSize="14sp"
                    android:textColor="@color/colorsilver"
                    android:shadowColor="@color/colorsilver"/>
            </LinearLayout>
            <LinearLayout
                android:id="@+id/btnfivem"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:orientation="vertical"
                >
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="5"
                    android:textSize="25sp"
                    android:textColor="@color/colorPrimary"
                    android:shadowColor="@color/colorsilver"
                    />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="JKL"
                    android:textSize="14sp"
                    android:textColor="@color/colorsilver"
                    android:shadowColor="@color/colorsilver"/>
            </LinearLayout>
            <LinearLayout
                android:id="@+id/btnsixm"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:orientation="vertical"
                android:layout_marginLeft="25dp">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="6"
                    android:textSize="25sp"
                    android:textColor="@color/colorPrimary"
                    android:shadowColor="@color/colorsilver"
                    />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="MNO"
                    android:textSize="14sp"
                    android:textColor="@color/colorsilver"
                    android:shadowColor="@color/colorsilver"/>
            </LinearLayout>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_horizontal"
            android:layout_marginTop="20dp"
            android:weightSum="3">
            <LinearLayout
                android:id="@+id/btnsevenm"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:orientation="vertical"
                android:layout_marginRight="25dp">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="7"
                    android:textSize="25sp"
                    android:textColor="@color/colorPrimary"
                    android:shadowColor="@color/colorsilver"
                    />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="PQRS"
                    android:textSize="14sp"
                    android:textColor="@color/colorsilver"
                    android:shadowColor="@color/colorsilver"/>
            </LinearLayout>
            <LinearLayout
                android:id="@+id/btneightm"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:orientation="vertical"
                >
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="8"
                    android:textSize="25sp"
                    android:textColor="@color/colorPrimary"
                    android:shadowColor="@color/colorsilver"
                    />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="TUV"
                    android:textSize="14sp"
                    android:textColor="@color/colorsilver"
                    android:shadowColor="@color/colorsilver"/>
            </LinearLayout>
            <LinearLayout
                android:id="@+id/btnninem"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:orientation="vertical"
                android:layout_marginLeft="25dp">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="9"
                    android:textSize="25sp"
                    android:textColor="@color/colorPrimary"
                    android:shadowColor="@color/colorsilver"
                    />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="WXYZ"
                    android:textSize="14sp"
                    android:textColor="@color/colorsilver"
                    android:shadowColor="@color/colorsilver"/>
            </LinearLayout>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_horizontal"
            android:layout_marginTop="20dp"
            android:weightSum="3">
            <LinearLayout
                android:id="@+id/btnstarm"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:orientation="vertical"
                android:layout_marginRight="25dp">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="*"
                    android:textSize="25sp"
                    android:textColor="@color/colorPrimary"
                    android:shadowColor="@color/colorsilver"
                    />
            </LinearLayout>
            <LinearLayout
                android:id="@+id/btnzerom"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:orientation="vertical"
                >
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="0"
                    android:textSize="25sp"
                    android:textColor="@color/colorPrimary"
                    android:shadowColor="@color/colorsilver"
                    />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="+"
                    android:textSize="14sp"
                    android:textColor="@color/colorsilver"
                    android:shadowColor="@color/colorsilver"/>
            </LinearLayout>
            <LinearLayout
                android:id="@+id/btnhasm"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:orientation="vertical"
                android:layout_marginLeft="25dp">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="#"
                    android:textSize="25sp"
                    android:textColor="@color/colorPrimary"
                    android:shadowColor="@color/colorsilver"
                    />
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>
</LinearLayout>