                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"

                        >

                        <ImageView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:src="@drawable/ic_phone"
                            android:visibility="gone" />

                        <com.hbb20.CountryCodePicker
                            android:id="@+id/ccp_editcontact"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            app:ccp_textSize="13sp"
                            android:visibility="gone"
                            app:ccp_autoDetectCountry="false"
                            app:ccp_defaultNameCode="US"/>



                        <EditText
                            android:id="@+id/editContactNumber"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:ems="10"
                            android:layout_marginStart="10dp"
                            android:layout_marginEnd="10dp"
                            android:drawableStart="@drawable/ic_phone"
                            android:fontFamily="@font/proximanovasoft_medium"
                            android:hint="Phone Number"
                            android:drawablePadding="20dp"
                            android:paddingBottom="20dp"
                            android:textSize="14sp"
                            android:inputType="phone"
                            android:theme="@style/ContactsEditText" />


                    </LinearLayout>

                    <LinearLayout
                        android:id="@+id/linplus1"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentRight="true"
                        android:layout_marginRight="30dp"
                        >

                        <ImageButton
                            android:id="@+id/plus1"
                            android:layout_width="30dp"
                            android:layout_height="30dp"
                            android:src="@drawable/ic_save"
                            android:layout_marginTop="5dp"
                            android:background="@color/transparent"
                            android:tag="save"
                            />
                    </LinearLayout>

                    <LinearLayout
                        android:id="@+id/lindel1"
                        android:layout_width="30dp"
                        android:layout_height="wrap_content"
                        android:layout_alignParentRight="true"
                        android:visibility="gone">

                        <ImageButton
                            android:id="@+id/del1"
                            android:layout_width="30dp"
                            android:layout_height="30dp"
                            android:src="@drawable/ic_del_b"
                            android:layout_marginTop="5dp"
                            android:background="@color/transparent"/>

                    </LinearLayout>
                </RelativeLayout>


