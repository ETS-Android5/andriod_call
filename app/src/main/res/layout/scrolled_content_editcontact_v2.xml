                android:drawablePadding="20dp"
                android:ems="10"
                android:fontFamily="@font/proximanovasoft_medium"
                android:hint="Name"
                android:inputType="textPersonName"
                android:paddingBottom="20dp"
                android:textSize="14sp"
                android:theme="@style/ContactsEditText" />



