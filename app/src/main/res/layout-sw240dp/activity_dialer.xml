<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@color/colorwhite">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:orientation="vertical"
        android:gravity="center"
        android:paddingTop="40dp">
        <RelativeLayout
            android:id="@+id/phonedialScreen"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:background="@drawable/shadow_fivetwo"
            >
            <!--<com.hbb20.CountryCodePicker-->
                <!--android:id="@+id/ccp"-->
                <!--android:layout_width="wrap_content"-->
                <!--android:layout_height="wrap_content"-->
                <!--app:defaultNameCode="US"-->
                <!--app:textSize="18sp"-->
                <!--style="@style/AppTheme"/>-->

            <EditText
                android:id="@+id/phoneNumber"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentTop="true"
                android:layout_marginRight="42dp"
                android:layout_toRightOf="@+id/ccp"
                android:background="@android:color/transparent"
                android:focusableInTouchMode="false"
                android:freezesText="true"
                android:maxLines="1"
                android:textSize="18sp"
                android:paddingTop="8dp"
                android:inputType="number"
                android:textIsSelectable="true"
                />
            <Button
                android:id="@+id/btnDelete"
                android:layout_width="34dp"
                android:layout_height="28dp"
                android:background="@drawable/ic_delete_text"
                android:gravity="center_vertical|center_horizontal"
                android:layout_alignParentTop="true"
                android:layout_alignParentRight="true"
                android:layout_alignParentEnd="true"
                android:layout_marginRight="10dp"
                android:layout_marginTop="6dp"/>
        </RelativeLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/l_credit"
            android:gravity="center|left"
            android:layout_marginTop="2dp"
            android:layout_marginLeft="2dp"
            android:layout_marginRight="2dp"
            android:background="#f1f1f1"
            android:orientation="horizontal"
            android:layout_below="@id/phonedialScreen">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1">

                <TextView
                    android:id="@+id/txt_timezone"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginLeft="8dp"
                    android:textColor="#4c4c4c"
                    android:text=""
                    android:textSize="12sp"/>

            </LinearLayout>



            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">

                <TextView
                    android:id="@+id/lbl_credits"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:text="Credits:  "
                    android:textSize="12sp"/>

                <TextView
                    android:id="@+id/txt_credits"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginEnd="20dp"
                    android:text=""
                    android:textStyle="bold"
                    android:textSize="12sp"/>


            </LinearLayout>




        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="8dp"
            android:layout_below="@id/l_credit">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_horizontal"
                android:layout_marginTop="10dp">
                <LinearLayout
                    android:id="@+id/btnOne"
                    android:layout_width="62dp"
                    android:layout_height="62dp"
                    android:gravity="center"
                    android:orientation="vertical"
                    android:background="@drawable/circle_outline"
                    android:layout_marginRight="25dp">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="1"
                        android:textSize="22sp"
                        android:textColor="@color/colorblack"
                        android:shadowColor="@color/colorsilver"
                        />
                </LinearLayout>
                <LinearLayout
                    android:id="@+id/btntwo"
                    android:layout_width="62dp"
                    android:layout_height="62dp"
                    android:gravity="center"
                    android:orientation="vertical"
                    android:background="@drawable/circle_outline"
                    >
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="2"
                        android:textSize="22sp"
                        android:textColor="@color/colorblack"
                        android:shadowColor="@color/colorsilver"
                        />
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="ABC"
                        android:textSize="12sp"
                        android:textColor="@color/colorblack"
                        android:shadowColor="@color/colorsilver"/>
                </LinearLayout>
                <LinearLayout
                    android:id="@+id/btnthree"
                    android:layout_width="62dp"
                    android:layout_height="62dp"
                    android:gravity="center"
                    android:orientation="vertical"
                    android:background="@drawable/circle_outline"
                    android:layout_marginLeft="25dp">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="3"
                        android:textSize="22sp"
                        android:textColor="@color/colorblack"
                        android:shadowColor="@color/colorsilver"
                        />
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="DEF"
                        android:textSize="12sp"
                        android:textColor="@color/colorblack"
                        android:shadowColor="@color/colorsilver"/>
                </LinearLayout>
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_horizontal"
                android:layout_marginTop="20dp">
                <LinearLayout
                    android:id="@+id/btnfour"
                    android:layout_width="62dp"
                    android:layout_height="62dp"
                    android:gravity="center"
                    android:orientation="vertical"
                    android:background="@drawable/circle_outline"
                    android:layout_marginRight="25dp">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="4"
                        android:textSize="22sp"
                        android:textColor="@color/colorblack"
                        android:shadowColor="@color/colorsilver"
                        />
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="GHI"
                        android:textSize="12sp"
                        android:textColor="@color/colorblack"
                        android:shadowColor="@color/colorsilver"/>
                </LinearLayout>
                <LinearLayout
                    android:id="@+id/btnfive"
                    android:layout_width="62dp"
                    android:layout_height="62dp"
                    android:gravity="center"
                    android:orientation="vertical"
                    android:background="@drawable/circle_outline"
                    >
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="5"
                        android:textSize="22sp"
                        android:textColor="@color/colorblack"
                        android:shadowColor="@color/colorsilver"
                        />
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="JKL"
                        android:textSize="12sp"
                        android:textColor="@color/colorblack"
                        android:shadowColor="@color/colorsilver"/>
                </LinearLayout>
                <LinearLayout
                    android:id="@+id/btnsix"
                    android:layout_width="62dp"
                    android:layout_height="62dp"
                    android:gravity="center"
                    android:orientation="vertical"
                    android:background="@drawable/circle_outline"
                    android:layout_marginLeft="25dp">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="6"
                        android:textSize="22sp"
                        android:textColor="@color/colorblack"
                        android:shadowColor="@color/colorsilver"
                        />
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="MNO"
                        android:textSize="12sp"
                        android:textColor="@color/colorblack"
                        android:shadowColor="@color/colorsilver"/>
                </LinearLayout>
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_horizontal"
                android:layout_marginTop="20dp">
                <LinearLayout
                    android:id="@+id/btnseven"
                    android:layout_width="62dp"
                    android:layout_height="62dp"
                    android:gravity="center"
                    android:orientation="vertical"
                    android:background="@drawable/circle_outline"
                    android:layout_marginRight="25dp">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="7"
                        android:textSize="22sp"
                        android:textColor="@color/colorblack"
                        android:shadowColor="@color/colorsilver"
                        />
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="PQRS"
                        android:textSize="12sp"
                        android:textColor="@color/colorblack"
                        android:shadowColor="@color/colorsilver"/>
                </LinearLayout>
                <LinearLayout
                    android:id="@+id/btneight"
                    android:layout_width="62dp"
                    android:layout_height="62dp"
                    android:gravity="center"
                    android:orientation="vertical"
                    android:background="@drawable/circle_outline"
                    >
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="8"
                        android:textSize="22sp"
                        android:textColor="@color/colorblack"
                        android:shadowColor="@color/colorsilver"
                        />
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="TUV"
                        android:textSize="12sp"
                        android:textColor="@color/colorblack"
                        android:shadowColor="@color/colorsilver"/>
                </LinearLayout>
                <LinearLayout
                    android:id="@+id/btnnine"
                    android:layout_width="62dp"
                    android:layout_height="62dp"
                    android:gravity="center"
                    android:orientation="vertical"
                    android:background="@drawable/circle_outline"
                    android:layout_marginLeft="25dp">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="9"
                        android:textSize="22sp"
                        android:textColor="@color/colorblack"
                        android:shadowColor="@color/colorsilver"
                        />
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="WXYZ"
                        android:textSize="12sp"
                        android:textColor="@color/colorblack"
                        android:shadowColor="@color/colorsilver"/>
                </LinearLayout>
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_horizontal"
                android:layout_marginTop="20dp">
                <LinearLayout
                    android:id="@+id/btnstar"
                    android:layout_width="62dp"
                    android:layout_height="62dp"
                    android:gravity="center"
                    android:orientation="vertical"
                    android:background="@drawable/circle_outline"
                    android:layout_marginRight="25dp">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="*"
                        android:textSize="22sp"
                        android:textColor="@color/colorblack"
                        android:shadowColor="@color/colorsilver"
                        />
                </LinearLayout>
                <LinearLayout
                    android:id="@+id/btnzero"
                    android:layout_width="62dp"
                    android:layout_height="62dp"
                    android:gravity="center"
                    android:orientation="vertical"
                    android:background="@drawable/circle_outline"
                    >
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="0"
                        android:textSize="22sp"
                        android:textColor="@color/colorblack"
                        android:shadowColor="@color/colorsilver"
                        />
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="+"
                        android:textSize="14sp"
                        android:textColor="@color/colorblack"
                        android:shadowColor="@color/colorsilver"/>
                </LinearLayout>
                <LinearLayout
                    android:id="@+id/btnhas"
                    android:layout_width="62dp"
                    android:layout_height="62dp"
                    android:gravity="center"
                    android:orientation="vertical"
                    android:background="@drawable/circle_outline"
                    android:layout_marginLeft="25dp">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="#"
                        android:textSize="22sp"
                        android:textColor="@color/colorblack"
                        android:shadowColor="@color/colorsilver"
                        />
                </LinearLayout>
            </LinearLayout>
        </LinearLayout>
        <RelativeLayout
            android:id="@+id/callinglayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:gravity="center"
            >

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="42dp"
                android:layout_marginLeft="50dp"
                android:layout_marginRight="50dp"
                android:background="@drawable/circle_outline_calling"
                android:gravity="center"
                android:orientation="horizontal"
                android:layout_marginTop="16dp"
                android:elevation="2dp">

                <RelativeLayout
                    android:id="@+id/phoneNumberLayout"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_gravity="center|center_vertical"
                    android:orientation="vertical"
                    >

                    <TextView
                        android:id="@+id/textUserName"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:text=""
                        android:textColor="@color/colorsilver"
                        android:textSize="12sp"
                        android:textStyle="bold"
                        android:paddingTop="6dp"
                        android:maxLines="1"
                        android:maxLength="20"
                        android:ellipsize="end"
                        />

                    <TextView
                        android:id="@+id/textUserNumber"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/textUserName"
                        android:gravity="center"
                        android:text=""
                        android:textColor="@color/colorsilver"
                        android:textSize="9sp"
                        android:textStyle="bold"
                        android:maxLines="1"
                        android:maxLength="16"
                        android:ellipsize="end"
                        />
                    <LinearLayout
                        android:layout_width="30dp"
                        android:layout_height="30dp"
                        android:layout_alignParentRight="true"
                        android:layout_marginRight="20dp"
                        android:background="@drawable/circle_outline_flag"
                        android:padding="4dp"
                        android:layout_marginTop="7dp">

                        <com.callhippo.bueno.callhippo.Utils.RoundedImageView
                            android:id="@+id/imgdiaerUsercountry"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent" />
                    </LinearLayout>
                </RelativeLayout>

            </LinearLayout>

            <LinearLayout
                android:id="@+id/PlioCall"
                android:layout_width="68dp"
                android:layout_height="68dp"
                android:padding="10dp"
                android:layout_marginLeft="40dp"
                android:background="@drawable/circle_outline_call"
                android:elevation="10dp"
                android:layout_marginBottom="10dp">
                <ImageView
                    android:id="@+id/btnIncomingReceive"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/ic_call_white_24dp"
                    android:padding="8dp"/>
            </LinearLayout>
            <!--<ImageView-->
                <!--android:id="@+id/btnTempLogout"-->
                <!--android:layout_width="40dp"-->
                <!--android:layout_height="40dp"-->
                <!--android:src="@drawable/ic_logout"-->
                <!--android:layout_marginTop="20dp"-->
                <!--/>-->
        </RelativeLayout>
    </LinearLayout>
    </ScrollView>
</LinearLayout>